<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.*?>
<?import io.alegd.materialtouch.datatable.DataTable?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.StackPane?>
<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml">
    <DataTable fx:id="dataTable" styleClass="card">
        <header>
            <JFXToolbar>
                <leftItems>
                    <Label>Header</Label>
                </leftItems>
                <rightItems>
                    <JFXButton text="Insert"/>
                </rightItems>
            </JFXToolbar>
        </header>
        <columns>
            <JFXTreeTableColumn fx:id="nameColumn" text="Name"/>
            <JFXTreeTableColumn fx:id="ageColumn" text="Age"/>
            <JFXTreeTableColumn fx:id="addressColumn" text="Address"/>
        </columns>
    </DataTable>

    <padding>
        <Insets top="32" right="32" bottom="32" left="32"/>
    </padding>
</StackPane>
